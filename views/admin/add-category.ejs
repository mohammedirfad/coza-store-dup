                                            <input  class="form-control file-upload-info" type="file" id="image" name="image" accept="image/jpeg,image/gif,image/png,image/x-eps" placeholder="Upload Image" style="position: relative;
                                            top: 50%;
                                            left: 4%;
                                            right: 50%;"onclick="image1()" multiple>
                                        </div>
                                        <label style="    margin-left: -91px;" id="image-error"></label>
                                        <script>
                                            function valiadate(){
                                                
                                         var image = document.getElementById("image").value
                                         if(image == "" || image ==null){

                                            document.getElementById("image-error").style.fontStyle="italic"
                                            document.getElementById("image-error").style.color="red"
                                            document.getElementById("image-error").innerHTML="image is not uploaded"
                                         }
                                      
                                            }


                                            function image1(){
                                                if(image !=null)
                                                {
                                                    document.getElementById("image-error").style.color="green"
                                            document.getElementById("image-error").innerHTML="image  uploaded"
                                                }
                                            }


                                        </script>
                                    </div> <br>

                                    <button class="btn btn-primary btn-lg px-5" type="submit">Add Category</button>


                                </div>


                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>


